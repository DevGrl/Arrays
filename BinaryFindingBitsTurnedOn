using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace BinaryFindingBitsTurnedOn
{
    class Program
    {
        static void Main(string[] args)
        {
            //Problem
            //Find the number of bits that are on in a decimal number

            //Convert the decimal number to binary
            //store value in a string
            //Loop through string, incrementing a counter for each bit that equals 1
            //return counter

            int number = 35;
            string binary = Convert.ToString(number, 2);
            Console.WriteLine("The binary equivalent of {0} is {1}" ,number, binary);
            int counter = 0;

            for(int i = 0; i <= binary.Length-1; i++)
            {
                if(binary[i] == '1')
                {
                    counter++;                
                }
            }

            Console.WriteLine("The number of bits turned on is: {0}", counter);
            Console.Read();            
        }
    }
}
